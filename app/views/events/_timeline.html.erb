<div class="timeline bg-light p-4 rounded shadow-sm">
  <h2 class="text-left mb-4"><%= @date %></h2>
  <% if @daily_events.present? %>
    <% @daily_events.each do |event| %>
      <div class="event-item mb-4 p-3 border-left border-primary rounded bg-white shadow-sm">
        <h3 class="text-primary mb-1"><%= event.title %></h3>
        <p class="text-muted mb-0">
          <i class="fas fa-calendar-day"></i>
          Date: <%= event.start_date.strftime('%A, %B %d, %Y') %>
        </p>
      </div>
    <% end %>
  <% else %>
    <p class="text-muted text-center">No events scheduled for this date.</p>
  <% end %>
</div>